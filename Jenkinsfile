pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo "Hello! Jenkins Pipeline is working."
            }
        }

        stage('Build') {
            steps {
                echo "This is the build step."
            }
        }

        stage('Test') {
            steps {
                echo "Running tests... (just demo)"
            }
        }

        stage('Done') {
            steps {
                echo "Pipeline finished successfully!"
            }
        }
    }
}
